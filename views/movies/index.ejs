<h2> all movies </h2>
<% allMovies.forEach(movie=> { %>
    <h4>
        <%= movie.title %>
    </h4>
    <p>
        <%= movie.description %>
    </p>
    <p>
        <%= movie.review %>
    </p>
    <form action="/movies/update?_method=PUT" method="POST">
        <label for="description">Description:</label>
        <input type="text" name="updateDescription">
        <label for="review">Your Review:</label>
        <input type="text" name="updateReview">
        <input hidden name="movieId" value="<%= movie.id %>">
        <button class="btn btn-primary" type="submit">SUBMIT</button>
    </form>
    <form action="/movies/delete?_method=DELETE" method="POST">
        <input hidden name="delete" value="<%= movie.id %>">
        <button class="btn btn-primary" type="submit">DELETE</button>
    
    </form>

    <% }) %>